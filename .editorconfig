root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 250

[*.{py, scss}]
indent_size = 4

[*.{js, jsx, ts, tsx, vue}]
indent_size = 2

[*.{json, yaml, yml, xml}]
indent_size = 2

[Makefile]
indent_style = tab
